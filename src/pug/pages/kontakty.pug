extends ../_template

block variables
  - var title = 'Контакти | Приватний нотаріус Гордієнко О.В.'
  - var description = 'Сайт приватного нотаріуса Гордієнко О.В.'
  - var ogtitle     = 'Приватний нотаріус Гордієнко О.В.'
